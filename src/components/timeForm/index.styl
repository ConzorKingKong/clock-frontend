.time-form
  margin-left 1em

  select
    align-self flex-end

.time-form-inputs
  display flex
  flex-direction row
  justify-content space-around
  width 18%

.form-fieldset
  display: flex
  flex-direction: column
  border: none
  margin-top 1em
  margin-bottom 1em
  
@media (max-width : 1025px)
  .time-form-inputs
    width 25%

@media (max-width : 767px)
  .time-form-inputs
    width 100%